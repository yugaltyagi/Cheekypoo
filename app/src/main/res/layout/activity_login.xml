<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:background="@drawable/gradient_dating_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Animated App Logo with Heart Pulse Effect -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:lottie_autoPlay="true"
            android:src="@drawable/logo"
            app:lottie_loop="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp" />

        <!-- Welcome Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Your Perfect Match"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login to continue your journey"
            android:textSize="16sp"
            android:textColor="@color/white_alpha_70"
            android:layout_marginBottom="40dp"
            />

        <!-- Login Card with Enhanced Design -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/card_dark"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Email Input with Floating Label -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@color/card_dark"
                    app:boxStrokeColor="@color/pink_primary"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:hintTextColor="@color/white_alpha_70"
                    app:errorTextColor="@color/error_red"
                    app:counterTextColor="@color/white_alpha_70"
                    app:helperTextTextColor="@color/white_alpha_70"
                    app:startIconDrawable="@drawable/mail"
                    app:startIconTint="@color/white_alpha_70">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="Email Address"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white_alpha_70"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Input with Floating Label -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@color/card_dark"
                    app:boxStrokeColor="@color/pink_primary"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:hintTextColor="@color/white_alpha_70"
                    app:errorTextColor="@color/error_red"
                    app:counterTextColor="@color/white_alpha_70"
                    app:helperTextTextColor="@color/white_alpha_70"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/white_alpha_70"
                    app:startIconDrawable="@drawable/password"
                    app:startIconTint="@color/white_alpha_70">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:hint="Password"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white_alpha_70"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Forgot Password Link -->
                <TextView
                    android:id="@+id/tvForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password?"
                    android:textSize="14sp"
                    android:textColor="@color/pink_primary"
                    android:layout_gravity="end"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/poppins_medium" />

                <!-- Login Button with Ripple Effect -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_sparkle"
                    app:iconGravity="textEnd"
                    app:iconTint="@color/white"
                    app:backgroundTint="@color/pink_primary"
                    android:fontFamily="@font/poppins_semibold"
                    style="@style/Widget.MaterialComponents.Button" />

                <!-- Divider with Romantic Touch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginVertical="24dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/gradient_divider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Or connect with"
                        android:textSize="14sp"
                        android:textColor="@color/white_alpha_70"
                        android:layout_marginHorizontal="16dp"
                        android:fontFamily="@font/poppins_regular" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/gradient_divider" />

                </LinearLayout>

                <!-- Social Login Options with Brand Colors -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Google Login -->
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cornerRadius="30dp"
                        app:icon="@drawable/ic_google"
                        app:iconTint="@color/white"
                        app:backgroundTint="@color/google_red"
                        app:rippleColor="@color/white_alpha_20"
                        android:elevation="4dp"
                        android:layout_marginEnd="12dp"
                        style="@style/Widget.MaterialComponents.Button.Icon" />

                    <!-- Facebook Login -->
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cornerRadius="30dp"
                        app:icon="@drawable/ic_facebook"
                        app:iconTint="@color/white"
                        app:backgroundTint="@color/facebook_blue"
                        app:rippleColor="@color/white_alpha_20"
                        android:elevation="4dp"
                        android:layout_marginEnd="12dp"
                        style="@style/Widget.MaterialComponents.Button.Icon" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sign up Prompt with Attractive CTA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textSize="16sp"
                android:textColor="@color/white_alpha_70"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/tvSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up Now"
                android:textSize="16sp"
                android:textColor="@color/pink_primary"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/poppins_semibold" />

        </LinearLayout>

        <!-- Terms and Conditions with Clickable Links -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By continuing, you agree to our Terms and Privacy Policy"
            android:textSize="12sp"
            android:textColor="@color/white_alpha_70"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/poppins_regular" />

        <!-- Progress Indicator with Romantic Color -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="24dp"
            android:indeterminate="true"
            app:indicatorColor="@color/pink_primary"
            app:trackColor="@color/white_alpha_30"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>