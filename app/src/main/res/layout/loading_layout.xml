<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <!-- App Logo/Brand -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/heart"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Animated Progress Bar -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:indeterminate="true"
        app:indicatorColor="@color/theme_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <!-- Loading Text -->
    <TextView
        android:id="@+id/loadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Finding your perfect match..."
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar" />

    <!-- Shimmer Loading Placeholders -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/placeholderContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loadingText">

        <!-- Profile Image Placeholder -->
        <View
            android:id="@+id/profileImagePlaceholder"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="@drawable/shimmer_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Name Placeholder -->
        <View
            android:id="@+id/namePlaceholder"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shimmer_background"
            app:layout_constraintStart_toStartOf="@id/profileImagePlaceholder"
            app:layout_constraintTop_toBottomOf="@id/profileImagePlaceholder" />

        <!-- Age Placeholder -->
        <View
            android:id="@+id/agePlaceholder"
            android:layout_width="60dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shimmer_background"
            app:layout_constraintStart_toStartOf="@id/namePlaceholder"
            app:layout_constraintTop_toBottomOf="@id/namePlaceholder" />

        <!-- Action Buttons Placeholder -->
        <LinearLayout
            android:id="@+id/actionsPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/agePlaceholder">

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/shimmer_circle" />

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/shimmer_circle" />

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/shimmer_circle" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>