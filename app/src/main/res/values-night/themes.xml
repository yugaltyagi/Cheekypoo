<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base night theme -->
    <style name="Base.Theme.CheekyPoo" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary Colors -->
        <item name="colorPrimary">@color/theme_dark</item>
        <item name="colorPrimaryVariant">@color/theme_extra_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/theme_medium</item>
        <item name="colorSecondaryVariant">@color/theme_end</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/theme_extra_dark</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- Surface Colors -->
        <item name="colorSurface">@color/theme_dark</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Status & Navigation Bars -->
        <item name="android:statusBarColor">@color/theme_extra_dark</item>
        <item name="android:navigationBarColor">@color/theme_extra_dark</item>

    </style>

</resources>
