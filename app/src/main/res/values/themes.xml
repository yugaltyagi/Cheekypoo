<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme for CheekyPoo -->
    <style name="Base.Theme.CheekyPoo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/theme_start</item>
        <item name="colorPrimaryVariant">@color/theme_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/theme_end</item>
        <item name="colorSecondaryVariant">@color/theme_medium</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Surface Colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Status & Navigation Bars -->
        <item name="android:statusBarColor">@color/theme_dark</item>
        <item name="android:navigationBarColor">@color/theme_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Add Material 3 specific attributes -->
        <item name="materialThemeOverlay">@style/ThemeOverlay.CheekyPoo</item>
    </style>

    <!-- Light Theme -->
    <style name="Theme.CheekyPoo" parent="Base.Theme.CheekyPoo" />

    <!-- Dark Theme -->
    <style name="Theme.CheekyPoo.Dark" parent="Theme.CheekyPoo">
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <!-- Theme Overlay for additional customization -->
    <style name="ThemeOverlay.CheekyPoo" parent="">
        <item name="chipStyle">@style/Widget.CheekyPoo.Chip.Choice</item>
    </style>

    <!-- Custom Chip styling -->
    <style name="Widget.CheekyPoo.Chip.Choice" parent="Widget.Material3.Chip.Assist">
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="android:checkable">true</item>
        <!-- Add your custom chip colors -->
        <item name="chipBackgroundColor">@color/selector_chip_background</item>
        <item name="chipStrokeColor">@color/selector_chip_stroke</item>
        <item name="android:textColor">@color/selector_chip_text</item>
    </style>

</resources>